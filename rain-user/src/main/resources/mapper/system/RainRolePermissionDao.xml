<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.rao.dao.system.RainRolePermissionDao">
	
	<resultMap id="RainRolePermissionResultMap" type="com.rao.pojo.entity.system.RainRolePermission">
		<result property="roleId" column="role_id" />
		<result property="permissionId" column="permission_id" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 role_id ,permission_id
	</sql>
	
	<sql id="base_value_column">
		 #{roleId},#{permissionId}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="roleId != null">
			AND role_id = #{roleId,jdbcType=BIGINT}
		</if>
		<if test="permissionId != null">
			AND permission_id = #{permissionId,jdbcType=BIGINT}
		</if>
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="roleId != null">
			role_id = #{roleId,jdbcType=BIGINT},
		</if>
		<if test="permissionId != null">
			permission_id = #{permissionId,jdbcType=BIGINT},
		</if>
	</sql>

	<!-- 查询所有 -->
	<select id="findAll" resultMap="RainRolePermissionResultMap">
		SELECT	<include refid="base_column" />
		FROM	RAIN_ROLE_PERMISSION
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="int">
		SELECT COUNT(*) FROM RAIN_ROLE_PERMISSION
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.rao.pojo.entity.system.RainRolePermission">
		INSERT RAIN_ROLE_PERMISSION
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>

    <!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="RainRolePermissionResultMap">
		SELECT	<include refid="base_column" />
		FROM 	RAIN_ROLE_PERMISSION
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>

	<!-- 保存角色权限关系 -->
	<insert id="batchSaveRelation" parameterType="com.rao.pojo.entity.system.RainRolePermission">
		INSERT INTO RAIN_ROLE_PERMISSION ( <include refid="base_column" /> )
		values
		<foreach collection="rolePermissions" item="item" index="index" separator=",">
			(
			#{item.roleId},#{item.permissionId}
			)
		</foreach>
	</insert>

</mapper>