		<if test="password != null and password != ''">
			PASSWORD = #{password,jdbcType=VARCHAR},
		</if>
		<if test="nickname != null and nickname != ''">
			NICKNAME = #{nickname,jdbcType=VARCHAR},
		</if>
		<if test="isEnabled != null">
			IS_ENABLED = #{isEnabled,jdbcType=INTEGER},
		</if>
		<if test="isLocked != null">
			IS_LOCKED = #{isLocked,jdbcType=INTEGER},
		</if>
		<if test="loginFailureCount != null">
			LOGIN_FAILURE_COUNT = #{loginFailureCount,jdbcType=INTEGER},
		</if>
		<if test="lockedDate != null">
			LOCKED_DATE = #{lockedDate,jdbcType=TIMESTAMP},
		</if>
		<if test="loginDate != null">
			LOGIN_DATE = #{loginDate,jdbcType=TIMESTAMP},
		</if>
		<if test="loginIp != null and loginIp != ''">
			LOGIN_IP = #{loginIp,jdbcType=VARCHAR},
		</if>
		<if test="email != null and email != ''">
			EMAIL = #{email,jdbcType=VARCHAR},
		</if>
		<if test="roleId != null">
			ROLE_ID = #{roleId,jdbcType=BIGINT},
		</if>
		<if test="avatar != null and avatar != ''">
			AVATAR = #{avatar,jdbcType=VARCHAR},
		</if>
		<if test="updateDate != null">
			UPDATE_DATE = #{updateDate,jdbcType=TIMESTAMP},
		</if>
		<if test="theme != null">
			THEME = #{theme,jdbcType=INTEGER},
		</if>
		<if test="phone != null and phone != ''">
			PHONE = #{phone,jdbcType=VARCHAR},
		</if>
		<if test="userType != null">
			USER_TYPE = #{userType,jdbcType=INTEGER},
		</if>
		<if test="content != null and content != ''">
			content = #{content,jdbcType=VARCHAR},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="TSystemUserResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_SYSTEM_USER
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="TSystemUserResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_SYSTEM_USER
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="integer">
		SELECT COUNT(*) FROM T_SYSTEM_USER
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="pojo.entity.system.TSystemUser">
		INSERT T_SYSTEM_USER
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="pojo.entity.system.TSystemUser">
		UPDATE	T_SYSTEM_USER
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM T_SYSTEM_USER
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM T_SYSTEM_USER
		WHERE	ID	IN
    	<foreach item="TSystemUserId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{TSystemUserId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="TSystemUserResultMap">
		SELECT	<include refid="base_column" />
		FROM 	T_SYSTEM_USER
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="TSystemUserResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_SYSTEM_USER
		<where> 1=1
			<include refid="where_column" />
		</where>
		<if test="orderByRule != null and orderByRule != ''">
			ORDER BY ${orderByRule}
		</if>
		limit #{pageBegin}, #{pageSize}
