<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.rao.dao.system.TSystemRoleDao">
	
	<resultMap id="TSystemRoleResultMap" type="pojo.entity.system.TSystemRole">
		<id property="id" column="ID"  />
		<result property="createDate" column="CREATE_DATE" />
		<result property="roleName" column="ROLE_NAME" />
		<result property="isSystem" column="IS_SYSTEM" />
		<result property="descriptions" column="DESCRIPTIONS" />
		<result property="updateDate" column="UPDATE_DATE" />
		<result property="creator" column="CREATOR" />
		<result property="updator" column="UPDATOR" />
		<result property="platType" column="PLAT_TYPE" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 ID ,CREATE_DATE ,ROLE_NAME ,IS_SYSTEM ,DESCRIPTIONS ,UPDATE_DATE ,CREATOR ,UPDATOR ,PLAT_TYPE 
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{createDate},#{roleName},#{isSystem},#{descriptions},#{updateDate},#{creator},#{updator},#{platType}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="id != null">
			AND ID = #{id,jdbcType=BIGINT}
		</if>
		<if test="createDate != null">
			AND CREATE_DATE = #{createDate,jdbcType=TIMESTAMP}
		</if>
		<if test="roleName != null and roleName != ''">
			AND ROLE_NAME = #{roleName,jdbcType=VARCHAR}
		</if>
		<if test="isSystem != null">
			AND IS_SYSTEM = #{isSystem,jdbcType=INTEGER}
		</if>
		<if test="descriptions != null and descriptions != ''">
			AND DESCRIPTIONS = #{descriptions,jdbcType=VARCHAR}
		</if>
		<if test="updateDate != null">
			AND UPDATE_DATE = #{updateDate,jdbcType=TIMESTAMP}
		</if>
		<if test="creator != null">
			AND CREATOR = #{creator,jdbcType=BIGINT}
		</if>
		<if test="updator != null">
			AND UPDATOR = #{updator,jdbcType=BIGINT}
		</if>
		<if test="platType != null">
			AND PLAT_TYPE = #{platType,jdbcType=INTEGER}
		</if>
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null">
			ID = #{id,jdbcType=BIGINT},
		</if>
		<if test="createDate != null">
			CREATE_DATE = #{createDate,jdbcType=TIMESTAMP},
		</if>
		<if test="roleName != null and roleName != ''">
			ROLE_NAME = #{roleName,jdbcType=VARCHAR},
		</if>
		<if test="isSystem != null">
			IS_SYSTEM = #{isSystem,jdbcType=INTEGER},
		</if>
		<if test="descriptions != null and descriptions != ''">
			DESCRIPTIONS = #{descriptions,jdbcType=VARCHAR},
		</if>
		<if test="updateDate != null">
			UPDATE_DATE = #{updateDate,jdbcType=TIMESTAMP},
		</if>
		<if test="creator != null">
			CREATOR = #{creator,jdbcType=BIGINT},
		</if>
		<if test="updator != null">
			UPDATOR = #{updator,jdbcType=BIGINT},
		</if>
		<if test="platType != null">
			PLAT_TYPE = #{platType,jdbcType=INTEGER},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="TSystemRoleResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_SYSTEM_ROLE
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="TSystemRoleResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_SYSTEM_ROLE
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="integer">
		SELECT COUNT(*) FROM T_SYSTEM_ROLE
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="pojo.entity.system.TSystemRole">
		INSERT T_SYSTEM_ROLE
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="pojo.entity.system.TSystemRole">
		UPDATE	T_SYSTEM_ROLE
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM T_SYSTEM_ROLE
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM T_SYSTEM_ROLE
		WHERE	ID	IN
    	<foreach item="TSystemRoleId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{TSystemRoleId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="TSystemRoleResultMap">
		SELECT	<include refid="base_column" />
		FROM 	T_SYSTEM_ROLE
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="TSystemRoleResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_SYSTEM_ROLE
		<where> 1=1
			<include refid="where_column" />
		</where>
		<if test="orderByRule != null and orderByRule != ''">
			ORDER BY ${orderByRule}
		</if>
		limit #{pageBegin}, #{pageSize}
	</select>
	
</mapper> 